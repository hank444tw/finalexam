@model FinalExam.Models.TwoModelProduct

@{
    ViewBag.Title = Model.Product.ProductName;
}
<div id="w">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>@Model.Product.ProductName</h2>
            </div>
        </div>
    </div>
    <!-- 造型真醜 -->
</div>
<hr />

<div class="container">
    <div class="col-md-4">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->

            <div class="carousel-inner">
                @*
                    <div class="item active">
                        <img src="~/Image/Logo.png" alt="Los Angeles" style="width:400px;height:300px">
                    </div>
                *@
                @{
                    string i = "active";
                }
                @foreach (var item in Model.ProductImage)
                {

                    <div class="item @i">
                        <img src="~/Image/@Html.DisplayFor(m =>item.PId)/@Html.DisplayFor(m => item.ImageName) .png" alt="Los Angeles" style="width:400px;height:300px">

                    </div>
                    i = "";
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    @using (Html.BeginForm("ProductPage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input id="Product_ProductName" name="ProductName" type="hidden" value=@Model.Product.ProductName />
        <input id="Product_ProductName" name="ProductMoney" type="hidden" value=@Model.Product.ProductMoney />

        <div class="col-md-8">
            <div class="caption">
                <h2>
                    @Html.DisplayFor(modelItem => Model.Product.ProductName)
                </h2>
                <h2>
                    @Html.DisplayFor(modelItem => Model.Product.ProductIntrodution)
                </h2>
                <h2>
                    @Html.DisplayFor(modelItem => Model.Product.ProductMoney) 元
                </h2>
                <h2>
                    訂購數量 <input type="number" min="1" max="100" name="Amount" />
                </h2>

                <input type="submit" value="購買" class="btn btn-default" />
            </div>
        </div>

    }
</div>
<hr/>