@model FinalExam.Models.Product

@using (Html.BeginForm("CreateProduct", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
        <div id="w">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>新增產品</h2>
            </div>
        </div>
    </div>
    <!-- 造型真醜 -->
</div>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-5">產品名稱</label>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-5">金額</label>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.ProductMoney, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductMoney, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-5">簡短介紹</label>
                <div class="col-md-7">
                    @Html.EditorFor(model => model.ProductIntrodution, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductIntrodution, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-7">
                    <input type="submit" value="新增產品" class="btn btn-default" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="thumbnail">
                        <input type="file" name="fileList" id="imgInp1" />
                        <img src="" style="width:200px;height:150px" id="blah1" class="hidden" />
                    </div>
                </div>

                <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
                <script type="text/javascript">
                    $(function () {
                        $("#imgInp1").change(function () {
                            if (this.files && this.files[0]) {
                                var reader = new FileReader();
                                reader.onload = function (e) {
                                    $('#blah1').attr('src', e.target.result);
                                    $('#blah1').attr('class', "show");
                                    //$('#blah').show(); //圖片顯示
                                }
                                reader.readAsDataURL(this.files[0]);
                            }
                        }
                        );
                    });
                </script>

                <div class="col-md-4">
                    <div class="thumbnail">
                        <input type="file" name="fileList" id="imgInp2" />
