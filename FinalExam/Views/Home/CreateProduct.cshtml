                                }
                                reader.readAsDataURL(this.files[0]);
                            }
                        }
                        );
                    });
                </script>

                <div class="col-md-4">
                    <div class="thumbnail">
                        <input type="file" name="fileList" id="imgInp3" />
                        <img src="" style="width:200px;height:150px" id="blah3" class="hidden" />
                    </div>
                </div>
                <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
